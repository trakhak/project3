<Window x:Class="Project_Three_GUI.CurrentResidentTab"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_Three_GUI"
        mc:Ignorable="d"
        Title="CurrentResidentTab" WindowState="Maximized"  FontSize="18">
    <DockPanel>
        <StackPanel Orientation="Horizontal" Margin="50">
            <Label Content="Search By Id:" />

        </StackPanel>
        <DataGrid x:Name="resident_grid" SelectionMode="Single" AutoGenerateColumns="False" Margin="60,142,60,29.6" Width="418" FontSize="18">
            <DataGridTextColumn Header="Id" Binding="{Binding Id}"/>
            <DataGridTextColumn Header="First Name" Binding="{Binding firstName}"/>
            <DataGridTextColumn Header="Last Name" Binding="{Binding lastName}"/>
            <DataGridTextColumn Header="Dorm Number" Binding="{Binding dormNum}"/>
            <DataGridTextColumn Header="Monthly Fee" Binding="{Binding fee}"/>
            <DataGridTextColumn Header="Floor Number" Binding="{Binding floorNum}"/>

        </DataGrid>
    </DockPanel>


</Window>
